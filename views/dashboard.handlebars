{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
    {{#each posts as |post|}}
      {{!-- {{> dashboard-postinfo post}} --}}
    <div class="card">
        <div class="card-header">
            <h4>{{post.name}}</h4>
            <p>{{post.content}}</p>
            <p class="blockquote-footer mt-1">Posted on {{format_date created_at}}</p>
            <button class="delete" onclick="deletePost({{post.id}})" id="delete-post-{{post.id}}" data-index={{post.id}}>DELETE</button>
        </div>
        {{!-- <p class="card-body">{{post.content}}</p> --}}
    </div>
    {{/each}}

</section>
{{/if}}

<button type="submit" class="btn"><a class="link" href="/dashboard/new">+ New Post</a></button>
<script src='/js/delete-post.js'></script>