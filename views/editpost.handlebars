<div class="card">
    <h3 class="card-header">Edit Post</h3>
    <form class="card-body edit-post-form" data-post="{{post.id}}">
        <label for="post-title" class="form-label">Title</label>
        <input id="title-input" type="text" value="{{post.name}}" class="form-input" />
        <label class="form-label" for="content">Content</label>
        <input id="content-input" type="text" value="{{post.content}}" class="form-input" />
        <button type="submit" class="btn">Update Post</button>
        <button type="button" class="delete-post-btn btn">Delete Post</button>
    </form>
</div>


<script src="/js/edit-delete.js"></script>
