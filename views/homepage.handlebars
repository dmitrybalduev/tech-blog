<!-- Loop over each object in the projects array -->
{{#each posts as |post| }}
<div class="row mb-4 project" >
  <div class="col-md-5">
    <h2>
      <a href="/api/posts/{{post.id}}">{{post.name}}</a>
    </h2>
    <p>Created by {{post.user.username}} on {{format_date post.createdAt}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{post.content}}
    </p>
    {{#if post.comments}}

<ul class="list-group list-group-flush">
    {{#each post.comments as |comment| }}

        <li class="list-group-item">
            <div class="card border-info mb-3" >
                {{!-- <div class="card-header">
                    Comment from {{post.user.username}} on {{format_date comment.updatedAt}}
                </div> --}}
                <div class="card-body">
                    <blockquote class="blockquote mb-0">
                        <p>{{comment.text}}</p>
                        <footer class="blockquote-footer"> Comment from <cite>{{post.user.username}}</cite> on {{format_date comment.updatedAt}}</footer>
                    </blockquote>
                    
                </div>
            </div>
        </li>

        {{!-- <div class="card mb-2">
            <div class="card-header d-flex justify-content-end">
                <small>Comment from {{post.user.username}} on {{format_date comment.updatedAt}}</small>
            </div>
            <div class="card-body">
                <p class="card-text">{{comment.text}}</p>
            </div>
        </div> --}}
    {{/each}}
    </ul>
{{/if}}
  </div>


</div>
{{/each}}



